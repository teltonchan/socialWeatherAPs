<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/silver"
    tools:context="edu.depaul.csc472.weathersocial.WeatherStatus">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/socialButton"
            android:text="@string/social"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="socialHandler"/>
        <Button
            android:id="@+id/logoutButton"
            android:text="@string/logout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="logoutHandler"/>
        </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/cityScreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/currentTemp"
                        android:text="0"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:text="@string/minmax"
                        android:textSize="27sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/minmaxTemp"
                        android:text="0/0"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/weatherImage"
                        android:scaleType="fitCenter"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/loginlogo"
                        android:layout_width="200dp"
                        android:layout_height="120dp"/>

                    <TextView
                        android:id="@+id/detail"
                        android:text=" test\n test2\n test3"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TableRow>



                    <TextView
                        android:id="@+id/date1"
                        android:text="Sun"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_column="0"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/temp1"
                        android:text="30oc/40oc"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />



                    <ImageView
                        android:id="@+id/forecastImage1"
                        android:src="@drawable/loginlogo"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_width="75dp"
                        android:layout_height="50dp"
                        android:layout_column="2"
                        android:layout_weight="1"
                    />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/date2"
                        android:text="Mon"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/temp2"
                        android:text="30oc/40oc"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />



                    <ImageView
                        android:id="@+id/forecastImage2"
                        android:src="@drawable/loginlogo"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_width="75dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/date3"
                        android:text="Tue"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/temp3"
                        android:text="30oc/40oc"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />



                    <ImageView
                        android:id="@+id/forecastImage3"
                        android:src="@drawable/loginlogo"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_width="75dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/date4"
                        android:text="Wed"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/temp4"
                        android:text="30oc/40oc"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                    <ImageView
                        android:id="@+id/forecastImage4"
                        android:src="@drawable/loginlogo"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_width="75dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        />

                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/date5"
                        android:text="Thur"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/temp5"
                        android:text="30oc/40oc"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                    <ImageView
                        android:id="@+id/forecastImage5"
                        android:src="@drawable/loginlogo"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_width="75dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        />
                </TableRow>


            </TableLayout>

            <TextView
                android:text="@string/location"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            />
            <fragment
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:name="com.google.android.gms.maps.MapFragment"/>



        </LinearLayout>
    </ScrollView>
</LinearLayout>
